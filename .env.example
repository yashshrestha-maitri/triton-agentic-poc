# =============================================================================
# Triton Agentic - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# cp .env.example .env

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=development
DEBUG_MODE=true
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# PostgreSQL Database Configuration
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=triton_db
POSTGRES_USER=triton
POSTGRES_PASSWORD=triton_password
POSTGRES_SCHEMA=public

# Database connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# Redis Configuration (Celery Broker)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# Celery Configuration
# =============================================================================
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=1800
CELERY_TASK_SOFT_TIME_LIMIT=1500
CELERY_WORKER_PREFETCH_MULTIPLIER=1
CELERY_WORKER_MAX_TASKS_PER_CHILD=100

# =============================================================================
# Model Provider Configuration
# =============================================================================
# Choose one: aws_bedrock, anthropic, openai, google, groq
DEFAULT_MODEL_PROVIDER=aws_bedrock
DEFAULT_MODEL_NAME=us.anthropic.claude-sonnet-4-20250514-v1:0

# =============================================================================
# AWS Bedrock Configuration (if using aws_bedrock provider)
# =============================================================================
# Option 1: Use AWS Profile (for local development)
AWS_PROFILE=your-profile-name
AWS_REGION=us-east-1

# Option 2: Use AWS Credentials (for Docker/Production)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1

# =============================================================================
# Direct API Keys (if not using AWS Bedrock)
# =============================================================================
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GOOGLE_API_KEY=
GROQ_API_KEY=

# =============================================================================
# Monitoring Configuration
# =============================================================================
ENABLE_METRICS=true
LOG_DIR=logs

# =============================================================================
# Flower (Celery Monitoring) - Optional
# =============================================================================
FLOWER_PORT=5555

# =============================================================================
# Docker-Specific Settings
# =============================================================================
# When running in Docker, AWS credentials directory mount path
AWS_CONFIG_DIR=~/.aws
